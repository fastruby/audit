<%= form_for @file, html: { multipart: true }, remote: true do |form| %>
  <%= form.label :file, class: "file" do %>
    <%= form.file_field :file, required: true %>
    <span class="file-custom">Select a Gemfile.lock file...
    </span>
    <span class="file-upload btn btn-primary">Upload File</span>
  <% end %>
  <%= form.submit "Check file".html_safe, class: "check_button btn btn-primary", disabled: true%>
  <% if flash[:error].present? %>
    <span class="error">There was an error: <%= flash[:error] %></span>
  <% end %>
<% end %>
<div class="col-xs-12 col-md-6 col-md-offset-3 error"></div>