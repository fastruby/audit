
<div id="header_vulnerabilities" class="header">
  <% if @vulnerabilities[:warnings].empty? && @vulnerabilities[:advisories].empty? %>
    <h1 class="white_title" id="not_vulnerable">No vulnerabilities found!</h1>
  <% else %>
    <h1 class="white_title" id="vulnerable"><%= @vulnerabilities_count %> Vulnerabilities found!</h1>

  <!-- Copy Button -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.5.10/clipboard.min.js"></script>
  <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>

  <div class="call-to-actions">
    <button class="clipboard-btn check_button btn-audit">Share these results</button>

    <!-- Return Button -->
    <%= link_to 'Check another file', home_index_path, id: "check_another", class: "btn-audit-link" %>
  </div>
</div>
<div class="main-content" id="vulnerabilities-content">

  <h1 class="section-title">Warnings:</h1>
  <%= @vulnerabilities[:warnings].join(", ") %>
  
  <h1 class="section-title">Advisories:</h1>
  <% @vulnerabilities[:advisories].each do |advisory| %>
  <div class="advisory_title"> Vulnerable Gem:
    <%= advisory[0] %>
  </div>
  <span class="subtitle"> Name: </span>
  <%= advisory[1][:name] %>
  <br />
  <span class="subtitle"> Version: </span>
  <%= advisory[1][:version] %>
  <br />
  <span class="subtitle"> ID: </span>
  <%= advisory[1][:id] %>
  <br />
  <span class="subtitle"> URL: </span><a href="<%=advisory[1][:url]%>" target="_blank">
    Link</a>
  <br />
  <span class="subtitle"> Title: </span>
  <%= advisory[1][:title] %>
  <br />
  <span class="subtitle"> Description: </span>
  <%= raw render_description(advisory[1][:description]) %>
  <hr />
  <% end %>
  <% end %>
</div>